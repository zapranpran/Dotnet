@model IEnumerable<ProjectCatalog.Models.Supplier>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Template/Backend.cshtml";
}

<h1 style="color: black;">Supplier</h1>

<p>
    <a asp-action="Create" class="btn btn-dark" style="color: white;">Create New +</a>
</p>

<div class="card shadow-sm">
    <div class="card-body">
        <table class="table table-bordered" id="myTable">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Nama</th>
                    <th>Nomor Kontak</th>
                    <th class="text-center">Aksi</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int nomor = 1;
                }
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="color: black">@nomor</td>
                        <td style="color: black">@item.Nama</td>
                        <td style="color: black">@item.nomorkontak</td>
                        <td class="text-center">
                            <div class="btn-group">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-success mx-1" title="Edit">
                                    <i class="fa fa-pencil-alt"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-warning mx-1" title="Details">
                                    <i class="fa fa-eye"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger mx-1" title="Delete">
                                    <i class="fa fa-trash-alt"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                    nomor++;
                }
            </tbody>
        </table>
    </div>
</div>
