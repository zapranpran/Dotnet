@model ProjectCatalog.Models.Supplier

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Template/Backend.cshtml";
}

<h1>Create</h1>

<h4>Supplier</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">Tambah Supplier</h5>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Nama" class="control-label"></label>
                        <input asp-for="Nama" class="form-control" />
                        <span asp-validation-for="Nama" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="nomorkontak" class="control-label"></label>
                        <input asp-for="nomorkontak" class="form-control" />
                        <span asp-validation-for="nomorkontak" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-secondary ml-2">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
