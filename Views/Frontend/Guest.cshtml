@foreach (var item in Model)
{
    <div class="col-12 col-md-4 mb-4">
        <div class="card h-100">
            <!-- Gunakan data-bs-target dengan id modal yang unik -->
            <a data-bs-toggle="modal" data-bs-target="#detailModal-@item.Id">
                <img src="~/image/produk/@item.ImageProduk" class="card-img-top" alt="@item.NamaProduk">
            </a>
            <div class="card-body">
                <a href="shop-single.html" class="h2 text-decoration-none text-dark">@item.NamaProduk</a>
                <p class="card-text">@item.Deskripsi</p>
                <p class="text-muted">Rp. @item.Harga.ToString("N2")</p>
            </div>
        </div>
    </div>

    <!-- Modal dengan ID unik untuk setiap produk -->
    <div class="modal fade" id="detailModal-@item.Id" tabindex="-1" aria-labelledby="detailModalLabel-@item.Id" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="detailModalLabel-@item.Id">@item.NamaProduk</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-4">
                            <img src="~/image/produk/@item.ImageProduk" class="img-fluid mb-3" alt="@item.NamaProduk">
                        </div>
                        <div class="col-md-8">
                            <p><strong>Deskripsi:</strong> @item.Deskripsi</p>
                            <p><strong>Kategori:</strong> @item.Kategori.Name</p>
                            <p><strong>Brand:</strong> @item.Supplier.Nama</p>
                            <p><strong>Harga:</strong> Rp. @item.Harga.ToString("N2")</p>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
}


