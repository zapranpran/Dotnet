@model ProjectCatalog.Models.Produk

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Template/Backend.cshtml";
}

<h1>Create</h1>

<div class="card mb-4">
    <div class="card-header">
        Create Produk
    </div>
    <div class="card-body">
        <h4>Produk</h4>
        <hr />
        <div class="row">
            <div class="col-md-12">
                <form asp-action="Create" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="NamaProduk" class="control-label"></label>
                        <input asp-for="NamaProduk" class="form-control" />
                        <span asp-validation-for="NamaProduk" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Harga" class="control-label"></label>
                        <input asp-for="Harga" class="form-control" />
                        <span asp-validation-for="Harga" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Foto</label>
                        <input asp-for="ImageProduk" type="file" class="form-control" accept=".jpg, .jpeg, .png,"/>
                        <span asp-validation-for="ImageProduk" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Deskripsi" class="control-label"></label>
                        <textarea asp-for="Deskripsi" class="form-control"></textarea>
                        <span asp-validation-for="Deskripsi" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="KategoriId" class="control-label">Kategori</label>
                        <select asp-for="KategoriId" class="form-control" asp-items="ViewBag.KategoriId"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="SupplierId" class="control-label">Supplier</label>
                        <select asp-for="SupplierId" class="form-control" asp-items="ViewBag.SupplierId"></select>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-secondary ml-2">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
